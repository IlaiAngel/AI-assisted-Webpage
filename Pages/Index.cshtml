@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Email Preferences</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- Bootstrap CSS CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card shadow-sm">
          <div class="card-body">
            <h2 class="mb-4">Email Preferences</h2>
            <form>
              <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" id="criticalAlerts" checked>
                <label class="form-check-label" for="criticalAlerts">
                  Critical alerts and notifications about your tax return
                </label>
              </div>
              <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" id="specialOffers">
                <label class="form-check-label" for="specialOffers">
                  Information about special offers for tax services
                </label>
              </div>
              <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" id="irsNotifications">
                <label class="form-check-label" for="irsNotifications">
                  Receive notifications of IRS changes and deadlines
                </label>
              </div>
              <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" id="taxNewsletter">
                <label class="form-check-label" for="taxNewsletter">
                  Learn from a monthly tax newsletter with tax news and tips
                </label>
              </div>
              <button type="submit" class="btn btn-primary mt-3">Save Preferences</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Bootstrap JS CDN (optional, for interactive components) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>